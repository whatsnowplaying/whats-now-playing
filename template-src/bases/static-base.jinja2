<!DOCTYPE HTML>
<!--
Template Metadata (AI-parseable):
{
  "name": "{{template_name}}",
  "description": "{{template_description}}",
  "type": "static",
  "base": "static-base",
  "refresh_rate": "{{refresh_rate|default('none')}}",
  "css_components": {{css_components|default('[]')|tojson}},
  "js_components": {{js_components|default('[]')|tojson}},
  "purpose": "Static display with periodic refresh",
  "customizable_elements": {
    "colors": "CSS color properties in style section",
    "fonts": "Font family and size in CSS",
    "layout": "HTML structure in body",
    "refresh_timing": "Meta refresh rate in head section"
  },
  "documentation": {
    "template_variables": "https://whatsnowplaying.org/whats-now-playing/latest/reference/templatevariables/",
    "api_reference": "https://whatsnowplaying.org/whats-now-playing/latest/reference/api/",
    "template_reference": "https://whatsnowplaying.org/whats-now-playing/latest/reference/templates/",
    "gallery_examples": "https://whatsnowplaying.org/whats-now-playing/latest/gallery/",
    "webserver_guide": "https://whatsnowplaying.org/whats-now-playing/latest/output/webserver/"
  }
}
-->
<html>

<head>
    <meta charset="utf-8">
    <title>{{template_title}}</title>
    {%- if font_link %}
    <link href="{{font_link}}" rel="stylesheet" type="text/css" />
    {%- endif %}
    {%- if external_imports %}
    {{external_imports}}
    {%- endif %}
    <style>
        {{css_content}}
    </style>
    {%- if refresh_rate %}
    <meta http-equiv="refresh" content="{{refresh_rate}}">
    {%- endif %}
</head>

<body>
    {{body_content}}

    {%- if js_content %}
    <script type="text/javascript">
        {{js_content}}
    </script>
    {%- endif %}
</body>

</html>